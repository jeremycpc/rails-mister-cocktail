<h1 class="text-center" id="banner-typed-text"></h1>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail|  %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card"
            <% if cocktail.photo? %>
              style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.2) 60%, rgba(0,0,0,0.2) 60%), url('<%= cl_image_path cocktail.photo %>')"
                  <% else %>
              style='background-image: linear-gradient(-225deg, rgba(0,0,0,0.2) 60%, rgba(0,0,0,0.2) 60%), url(https://source.unsplash.com/1600x900/?cocktails,<%="#{cocktail.id}"%>);'
              <% end %> >
            <div class="card-description">
              <h2> <%= cocktail.name %> </h2>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <p>
    <%= link_to "Create a cocktail", new_cocktail_path, { class: 'text-center' } %>
  </p>
</div>


